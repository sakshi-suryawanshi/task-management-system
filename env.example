# Django Application
DJANGO_PORT=8000

# Gunicorn Configuration
GUNICORN_WORKERS=3
GUNICORN_THREADS=2

# Celery Configuration
CELERY_LOG_LEVEL=INFO
CELERY_CONCURRENCY=4

# Flower Configuration
