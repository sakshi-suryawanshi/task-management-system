# Django Settings
SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
MYSQL_DATABASE=taskmanager
MYSQL_USER=taskuser
MYSQL_PASSWORD=taskpass
MYSQL_ROOT_PASSWORD=rootpass
MYSQL_HOST=db
MYSQL_PORT=3306

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PORT=6379

# Django Application
DJANGO_PORT=8000

# Gunicorn Configuration
# These settings are used by gunicorn_config.py
# For detailed configuration, see gunicorn_config.py file

# Number of worker processes (recommended: 3-4 for local dev, (2 x CPU cores) + 1 for production)
# Default: 3 (automatically calculated if not set)
GUNICORN_WORKERS=3

# Number of threads per worker (only used with 'gthread' worker class, ignored for sync workers)
# For sync workers (default), use more workers instead of threads
# Default: 1
GUNICORN_THREADS=1

# Worker timeout in seconds (time to process a request before timeout)
# Default: 120
# GUNICORN_TIMEOUT=120

# Graceful timeout in seconds (time to wait for workers to finish before restart)
# Default: 30
# GUNICORN_GRACEFUL_TIMEOUT=30

# Maximum requests per worker before restart (prevents memory leaks)
# Set to 0 to disable
# Default: 1000
# GUNICORN_MAX_REQUESTS=1000

# Log level (debug, info, warning, error, critical)
# Default: info
# GUNICORN_LOG_LEVEL=info

# Bind address (IP:PORT)
# Default: 0.0.0.0:8000 (all interfaces, port 8000)
# GUNICORN_BIND=0.0.0.0:8000

# Celery Configuration
CELERY_LOG_LEVEL=INFO
CELERY_CONCURRENCY=4

# Flower Configuration
FLOWER_PORT=5555
# Enable basic authentication for Flower (set to 'true' to enable, 'false' to disable)
# For local development, authentication is disabled by default for convenience
FLOWER_ENABLE_AUTH=false
FLOWER_USER=admin
FLOWER_PASSWORD=admin

# Nginx Configuration
NGINX_PORT=80

# Email Configuration (for Celery tasks)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Email Template Settings
SITE_NAME=Task Management System
FRONTEND_URL=http://localhost:3000
SUPPORT_EMAIL=your-email@gmail.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

