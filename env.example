# Django Settings
SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
MYSQL_DATABASE=taskmanager
MYSQL_USER=taskuser
MYSQL_PASSWORD=taskpass
MYSQL_ROOT_PASSWORD=rootpass
MYSQL_HOST=db
MYSQL_PORT=3306

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PORT=6379

# Django Application
DJANGO_PORT=8000

# Gunicorn Configuration
# These settings are used by gunicorn_config.py
# For detailed configuration, see gunicorn_config.py file

# Number of worker processes (recommended: 3-4 for local dev, (2 x CPU cores) + 1 for production)
# Default: 3 (automatically calculated if not set)
GUNICORN_WORKERS=3

# Number of threads per worker (only used with 'gthread' worker class, ignored for sync workers)
# For sync workers (default), use more workers instead of threads
# Default: 1
GUNICORN_THREADS=1

# Worker timeout in seconds (time to process a request before timeout)
# Default: 120
# GUNICORN_TIMEOUT=120

# Graceful timeout in seconds (time to wait for workers to finish before restart)
# Default: 30
# GUNICORN_GRACEFUL_TIMEOUT=30

# Maximum requests per worker before restart (prevents memory leaks)
# Set to 0 to disable
# Default: 1000
# GUNICORN_MAX_REQUESTS=1000

# Log level (debug, info, warning, error, critical)
# Default: info
# GUNICORN_LOG_LEVEL=info

# Bind address (IP:PORT)
# Default: 0.0.0.0:8000 (all interfaces, port 8000)
# GUNICORN_BIND=0.0.0.0:8000

# Celery Configuration
CELERY_LOG_LEVEL=INFO
CELERY_CONCURRENCY=4

# Flower Configuration
FLOWER_PORT=5555
# Enable basic authentication for Flower (set to 'true' to enable, 'false' to disable)
# For local development, authentication is disabled by default for convenience
FLOWER_ENABLE_AUTH=false
FLOWER_USER=admin
FLOWER_PASSWORD=admin

# Nginx Configuration
NGINX_PORT=80

# Email Configuration (for Celery tasks)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Email Template Settings
SITE_NAME=Task Management System
FRONTEND_URL=http://localhost:3000
SUPPORT_EMAIL=your-email@gmail.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging Configuration
# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO

# Component-specific log levels (overrides LOG_LEVEL if set)
# Django framework logging level
DJANGO_LOG_LEVEL=INFO
# Celery task queue logging level
CELERY_LOG_LEVEL=INFO
# Application-specific logging level (users, teams, projects, tasks, notifications, core)
APP_LOG_LEVEL=INFO

# Use JSON structured logging (true/false)
# JSON format is recommended for production (easier to parse and analyze)
# Human-readable format is better for development
# Default: false (uses DEBUG setting - false in production, true in development)
USE_JSON_LOGGING=false

# Log rotation settings
# Maximum size of log file before rotation (in bytes)
# Default: 10485760 (10MB)
LOG_MAX_BYTES=10485760

# Number of backup log files to keep
# Default: 10
LOG_BACKUP_COUNT=10

# Time-based rotation (for error logs)
# Options: 'S' (seconds), 'M' (minutes), 'H' (hours), 'D' (days), 'W0'-'W6' (weekday), 'midnight'
# Default: midnight (daily rotation at midnight)
LOG_ROTATION_WHEN=midnight

# Interval for time-based rotation
# Default: 1 (rotate daily if LOG_ROTATION_WHEN is 'midnight' or 'D')
LOG_ROTATION_INTERVAL=1

# ============================================================================
# Sentry Error Tracking Configuration
# ============================================================================
# Sentry provides real-time error tracking, performance monitoring, and release tracking.
# Sign up for a free account at https://sentry.io and create a project to get your DSN.
#
# For local development, you can leave SENTRY_DSN empty to disable Sentry.
# For production, set SENTRY_DSN to enable error tracking.

# Sentry DSN (Data Source Name) - Get this from your Sentry project settings
# Format: https://<key>@<organization>.ingest.sentry.io/<project-id>
# Leave empty to disable Sentry (useful for local development)
# Example: https://abc123def456@o123456.ingest.sentry.io/1234567
SENTRY_DSN=

# Sentry environment (development, staging, production)
# Default: 'development' if DEBUG=True, 'production' if DEBUG=False
SENTRY_ENVIRONMENT=development

# Sentry release version (optional, useful for tracking deployments)
# Can be set to git commit hash, version number, or deployment identifier
# Example: v1.0.0, commit-abc123, deploy-2024-01-15
# Leave empty to disable release tracking
SENTRY_RELEASE=

# Sentry sample rate for performance monitoring (0.0 to 1.0)
# 1.0 = 100% of transactions are sampled (can be expensive)
# 0.1 = 10% of transactions are sampled (recommended for production)
# 0.0 = Disable performance monitoring
# Default: 0.1 in production, 1.0 in development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Sentry sample rate for profiling (0.0 to 1.0)
# Profiling provides detailed performance data but is resource-intensive
# Only enable in production if needed for performance debugging
# Default: 0.0 (disabled)
SENTRY_PROFILES_SAMPLE_RATE=0.0

# Enable Sentry (true/false)
# Set to 'false' to disable Sentry even if DSN is provided
# Useful for temporarily disabling Sentry without removing DSN
# Default: true if SENTRY_DSN is set, false otherwise
SENTRY_ENABLED=true

